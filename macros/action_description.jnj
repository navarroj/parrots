{%- macro describe(text) -%}
<span class="action-description">({{ text }})</span>
{%- endmacro -%}

{%- macro laughter(sentence=None) -%}
{{ describe('Laughter.' if sentence else 'laughter')}}
{%- endmacro -%}

{%- macro applause(sentence=None) -%}
{{ describe('Applause.' if sentence else 'applause')}}
{%- endmacro -%}
